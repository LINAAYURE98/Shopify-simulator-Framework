

{%- comment -%} product-grid.liquid {%- endcomment -%}
<section class="featured-products">
  <div class="featured-products__container">
    <div class="product-list" data-product-list>
      {% for product in products limit: 10 %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>

    {% if products.size > 4 %}
      <button class="featured-products__view-all" data-view-all>
        View All
      </button>
    {% endif %}
  </div>
</section>