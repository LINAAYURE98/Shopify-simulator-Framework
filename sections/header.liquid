<div class="header-section" data-section-id="header" data-section-type="header">
  <header class="site-header" style="background-color: {{ settings['header'].settings.header_background }};">
    
    <div class="header-container">
      <!-- Logo Column -->
      <div class="header-logo">
        <a href="/">
          <div class="logo-placeholder">
            <img src="assets/{{ settings['header'].settings.logo_image | asset_url }}" alt="{{ settings['header'].settings.logo_text }}">

          </div>
        </a>
      </div>
     

